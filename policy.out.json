{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ObjectsRW",
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:PutObject", "s3:DeleteObject"],
      "Resource": [
        "arn:aws:s3:::simple-docs-326562525062-us-east-1-20250930-143050/templates/*",
        "arn:aws:s3:::simple-docs-326562525062-us-east-1-20250930-143050/outputs/*"
      ]
    },
    {
      "Sid": "ListRestricted",
      "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": "arn:aws:s3:::simple-docs-326562525062-us-east-1-20250930-143050",
      "Condition": {
        "StringLike": { "s3:prefix": ["templates/*", "outputs/*"] }
      }
    }
  ]
}
