{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ObjectsRW",
      "Effect": "Allow",
      "Action": ["s3:GetObject", "s3:PutObject", "s3:DeleteObject"],
      "Resource": [
        "arn:aws:s3:::YOUR_BUCKET/templates/*",
        "arn:aws:s3:::YOUR_BUCKET/outputs/*"
      ]
    },
    {
      "Sid": "ListRestricted",
      "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": "arn:aws:s3:::YOUR_BUCKET",
      "Condition": {
        "StringLike": { "s3:prefix": ["templates/*", "outputs/*"] }
      }
    }
  ]
}
